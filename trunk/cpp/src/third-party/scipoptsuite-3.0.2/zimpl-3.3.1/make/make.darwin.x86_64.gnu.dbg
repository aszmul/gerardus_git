#--- $Id: make.darwin.x86_64.gnu.dbg,v 1.6 2011/10/31 08:48:56 bzfkocht Exp $
CPPFLAGS        +=      -DFREEMEM -D__NO_MATH_INLINES 
CFLAGS          =       -O0 -m64 -g -fident $(GCCWARN)
LDFLAGS         =       -lgmp -lz -lm

ifeq ($(LINK),shared)
LIBRARY		=	$(LIBDIR)/lib$(LIBNAME).so
LIBLINK		=	$(LIBDIR)/lib$(NAME).$(BASE).so
CFLAGS		+=	-fPIC
AR		=	gcc -m64 -shared -o # the trailing space is important
ARFLAGS		=       $(LDFLAGS)
RANLIB		=	true
endif

ifeq ($(LINK),static)
LDFLAGS		=	-Bstatic -lgmp -lz -lm
endif
